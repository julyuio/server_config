#!/bin/bash
source conf

# Check if Nginx is installed
if command -v nginx &> /dev/null
then
    echo "Nginx is installed."
    nginx -v  # Display the version
else
    	echo "Nginx is NOT installed."
	apt install nginx -y
	systemctl start nginx
	systemctl enable nginx
fi

